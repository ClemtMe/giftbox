{% extends 'Base.twig' %}

{% block title %}Le coffret type {{ libelle }}{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto text-center mt-10 space-y-6">
        <h1 class="text-4xl font-extrabold uppercase text-gray-800">{{ libelle }}</h1>
        <p class="text-lg text-gray-600">{{ description }}</p>

        <div class="flex justify-center space-x-4 mt-6">
            <a href="{{ url_for('prestations_by_coffret', {'id': id}) }}"
               class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
                Voir les prestations
            </a>
            <a href="{{ url_for('create_box_coffret') }}?id={{ id }}"
               class="inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">
                Cr√©er une box
            </a>
        </div>
    </div>
{% endblock %}
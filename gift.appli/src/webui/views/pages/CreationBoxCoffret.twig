{% extends 'Base.twig' %}

{% block title %}Créer une Box{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-6 text-center">Créer une nouvelle Box à partir du coffret</h1>

    <form method="POST" action="{{ url_for('create_box_coffret') }}" class="max-w-xl mx-auto p-6 bg-white rounded-lg shadow-md space-y-6">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Nom de la Box :</label>
            <input type="text" id="name" name="name" required
                   class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-gray-700">Description :</label>
            <textarea id="description" name="description" required rows="3"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
        </div>

        <div class="flex items-center">
            <label for="is_gift" class="ml-2 block text-sm text-gray-700">Cadeau : </label>
            <input type="checkbox" id="is_gift" name="is_gift"
                   class="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
        </div>

        <div id="gift_message_div" class="hidden">
            <label for="gift_message" class="block text-sm font-medium text-gray-700">Message (si cadeau) :</label>
            <textarea id="gift_message" name="gift_message" rows="2"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
        </div>

        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
        <input type="hidden" name="coffret_id" value="{{ coffret_id }}">

        <div>
            <button type="submit"
                    class="inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-md font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Créer
            </button>
        </div>
    </form>

    <script>
        document.getElementById('is_gift').addEventListener('change', function() {
            const giftMessage = document.getElementById('gift_message_div');
            if (this.checked) {
                giftMessage.classList.remove('hidden');
            } else {
                giftMessage.classList.add('hidden');
            }
        });
    </script>
{% endblock %}